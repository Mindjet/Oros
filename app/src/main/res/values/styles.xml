<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeCust" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryCust</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkCust</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeCust.NoActionbar" parent="AppThemeCust">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="actionModeBackground">@android:color/transparent</item>
    </style>

</resources>
