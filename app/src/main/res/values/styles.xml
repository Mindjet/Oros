<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeCust" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryCust</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkCust</item>
        <item name="colorAccent">@color/colorAccentCust</item>
    </style>

    <style name="AppThemeCust.NoActionbar" parent="AppThemeCust">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppThemeCust.NoTitle">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BottomSheetHeroTextTheme">
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textColor">@color/secColor</item>
    </style>

    <style name="DetailTitleTextStyle">
        <!--        <item name="android:textStyle">italic|bold</item>-->
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/secColor</item>
        <item name="android:textSize">@dimen/hero_detail_title_text_size</item>
    </style>

</resources>
